<!DOCTYPE html>
<html class="no-js" {{ site.language_attributes }}>
<head>
	<!-- Basic -->
    <meta charset="{{ site.charset }}">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="profile" href="http://gmpg.org/xfn/11">

	<!-- Phones Link Detection -->
	<meta name="format-detection" content="telephone=no">

	<title>{% block title %} {{ __( 'Brocooly Framework', 'brocooly' ) }} | {{ site.name }} {% endblock %}</title>

	<link rel="stylesheet" href="{{ theme.link ~ '/style.css' }}">

	<!-- Google Fonts -->
	<script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js"></script>
	<script>
		var families = ['Roboto'];
		WebFont.load({ google: { families: families } });
	</script>

	{% block head %}
	{% endblock %}

	<!-- Alpine JS -->
	<link rel="dns-prefetch" href="https://unpkg.com" />
	<style>[x-cloak] { display: none !important; }</style>
	<script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>

	{{ fn('wp_head') }}
</head>
<body
	class="{{ body_class }} {% block body_class %} {% endblock %}"
	itemscope itemtype="http://schema.org/WebPage"
>

	{% do action('wp_body_open') %}

	{% block header %}
	{% endblock %}

	<main
		id="content"
		role="main"
		class="site-main"
		tabindex="-1"
	>
		{% block content %}{% endblock %}
	</main>

	{% block footer %}

	{% endblock %}

	{{ fn('wp_footer') }}

	{% block scripts %}{% endblock %}

	<script src="//instant.page/5.1.0" type="module" integrity="sha384-by67kQnR+pyfy8yWP4kPO12fHKRLHZPfEsiSXR8u2IKcTdxD805MGUXBzVPnkLHw"></script>
</body>
</html>
