<!DOCTYPE html>
<html class="no-js" {{ site.language_attributes }}>
<head>
	<!-- Basic -->
    <meta charset="{{ site.charset }}">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="profile" href="http://gmpg.org/xfn/11">

	<title>{% block title %} {{ __( 'Server error', 'brocooly' ) }} | {{ site.name }} {% endblock %}</title>

	<link rel="stylesheet" href="{{ theme.link ~ '/style.css' }}">

	<!-- Google Fonts -->
	<script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js"></script>
	<script>
		var families = ['Roboto'];
		WebFont.load({ google: { families: families } });
	</script>

	{% block head %}
	{% endblock %}

	{{ fn('wp_head') }}
</head>
<body
	class="{{ body_class }} {% block body_class %} {% endblock %}"
	itemscope itemtype="http://schema.org/WebPage"
>

	{% do action('wp_body_open') %}

	<main
		id="content"
		role="main"
		class="site-main"
		tabindex="-1"
	>
		{% block content %}{% endblock %}
	</main>

	{{ fn('wp_footer') }}
</body>
</html>
